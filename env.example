# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=vipe_dgii
DB_SSL=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=1h

# DGII API Configuration
DGII_PRE_CERT_URL=https://ecf.dgii.gov.do/testecf/
DGII_CERT_URL=https://ecf.dgii.gov.do/certecf/
DGII_PROD_URL=https://ecf.dgii.gov.do/ecf/

# Current Environment (pre-cert, cert, prod)
DGII_ENVIRONMENT=pre-cert

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Certificate Configuration
CERT_PATH=certs/
CERT_PASSWORD=your-cert-password

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
